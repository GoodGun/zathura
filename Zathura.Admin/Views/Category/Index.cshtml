@model PagedList.IPagedList<Zathura.Data.Model.Category>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Category List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content start -->
<div class="container-fluid">
    
    <div class="row">
        <!-- Responsive table -->
        <div class="col-md-12">
            <div class="panel panel-default">
                <header class="panel-heading">@ViewBag.Title</header>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Category</th>
                                <th>Main Category</th>
                                <th>Status</th>
                                <th>Author</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td><span class="label label-success">@item.CategoryId</span></td>
                                        <td>@item.Name</td>
                                        <td>@item.ParentCategoryId</td>
                                        <td>@if (item.IsActive)
                                            {
                                                <b class="label label-success">Active</b>
                                            }
                                            else
                                            {
                                                <b class="label label-danger">Passive</b>
                                            }
                                        </td>
                                        <td><a href="#">@(item.User.Name + " " + item.User.Surname)</a></td>
                                        <td>
                                            <a href="@Url.Action("Update","Category",new {categoryId = item.CategoryId})" class="btn btn-default btn-sm">Edit</a>
                                            @*<button class="btn btn-default btn-sm">Edit</button>*@
                                            <button class="btn btn-default btn-sm" id="catDeleteBtn" onclick="DeleteCategory()" data-id="@item.CategoryId">Delete</button>
                                            @*@Html.ActionLink("Delete","Delete",new {categoryId = item.CategoryId},new {onclick="return confirm('Are you sure want to delete?')"})*@
                                        </td>
                                    </tr>
                                }
                            }
                            
                            </tbody>
                        </table>
                    </div>
                    @Html.PagedListPager(Model, p => Url.Action("Index", new { p }), PagedListRenderOptions.Classic)
                </div>
            </div>
            
        </div>
        <!-- /Responsive table -->
    </div>
    
</div>

