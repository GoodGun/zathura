
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row row-head-match">
        <div class="col-xs-12 col-md-8 pull-right head-match-image">
            <div class="match-image" style="background-image:url(http://cdn.sportige.com/wp-content/uploads/2010/10/Rui-Costa-Materazzi.jpg)"></div>
        </div>
        <div class="col-xs-12 col-md-4 pull-left head-match-info">
            <div class="match-info">
                <div class="match-info-channel">
                    <small></small>
                    beIN Sports 2
                </div>
                <div class="match-info-teams">GALATASARAY - BEŞİKTAŞ</div>
                <div class="match-info-place">Türk Telekom Arena Stadyumu</div>
                <div class="match-info-date">27 Şubat Pazartesi, 20:00</div>
            </div>
        </div>

    </div>
    <div class="row row-content">
        @Html.Partial("_Content")

        @Html.Partial("_RightSidebar")
    </div>
</div>

